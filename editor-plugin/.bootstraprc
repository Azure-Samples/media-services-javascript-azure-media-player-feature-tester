---
#loglevel: debug

bootstrapVersion: 4

useFlexbox: true

styleLoaders:
  - style
  - css
  - postcss
  - sass

#preBootstrapCustomizations: ./src/...
bootstrapCustomizations: ./src/styles/base/variables.scss

appStyles: ./src/styles/main.scss

styles:
  mixins: true

  normalize: true
  print: true

  reboot: true
  type: true
  images: false
  code: false
  grid: true
  tables: false
  forms: true
  buttons: true

  animation: true
  dropdown: true
  button-group: false
  input-group: false
  custom-forms: true
  nav: true
  navbar: true
  card: true
  breadcrumb: false
  pagination: false
  pager: false
  labels: true
  jumbotron: false
  alert: false
  progress: false
  media: false
  list-group: false
  responsive-embed: false
  close: true

  # Requires JS
  modal: false
  tooltip: false
  popover: false
  carousel: false

  utilities: false
  utilities-spacing: false
  utilities-responsive: false
  utilities-background: true

scripts:
  alert: fasle
  button: false
  carousel: false
  collapse: false
  dropdown: false
  modal: false
  popover: false
  scrollspy: false
  tab: false
  tooltip: false
  util: false
